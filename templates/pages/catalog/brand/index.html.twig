{% extends "layout/admin.html.twig" %}

{% block header_actions %}

<a href="{{path('app_brand_create')}}" class="btn btn-primary">Ajouter une marque</a>


{% endblock %}

{% block content_title %}Liste des marques{% endblock %}

{% block content %}

<table class="table">

    <thead>
        <tr>
            <th>Marque</th>
            <th>Statut</th>
            <th>Total produits</th>
            <th></th>
        </tr>

    </thead>

    <tbody>

        {% for brand in brands %}
        <tr>
            <td class="d-flex align-items-center">
                <img src="{{vich_uploader_asset(brand, 'logoFile')}}" alt="{{brand.name}}" width="50" height="40"
                    class="rounded me-3 shadow">
                <div class="">
                    <strong>{{brand.name}}</strong> <br>
                    <span class="text-muted">{{brand.description|raw}}</span>
                </div>
            </td>
            <td>{{brand.status.value}} </td>
            <td></td>
            <td>
                <div class="dropdown">
                    <button class="btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                      ...
                    </button>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="{{path('app_brand_show', {'id': brand.id})}}">Consulter</a></li>
                      <li><a class="dropdown-item" href="{{path('app_brand_edit', {'id': brand.id})}}">Modifier</a></li>
                      <li><a class="dropdown-item" href="{{path('app_brand_edit', {'id': brand.id})}}">Desactiver</a></li>
                    </ul>
                  </div>
            </td>
        </tr>
        {% endfor %}

    </tbody>
</table


{% endblock %}