{{form_start(form)}}

<div class="row">
    <div class="col-md-4 col-lg-3">

        <div class="card mb-2">
            <div class="card-body">
                <h5 class="card-title">Vignette catégorie</h5>

                <div class="preview">

                </div>
                {{form_row(form.thumbnailFile)}}
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Statut</h5>

                {{ form_row(form.status) }}
                <div class="form-text">Activez ou désactivez la catégorie.</div>

            </div>
        </div>

    </div>


    <div class="col-lg-8 col-lg-9">

        <div class="card mb-2">
            <div class="card-body">
                <h5 class="card-title">Informations générales</h5>

                <div class="mt-3">
                    {{ form_row(form.name) }}
                </div>

                <div class="mt-3">
                    {{ form_row(form.description) }}
                </div>

                <div class="mt-3">
                    {{form_row(form.parentCategory)}}
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Options </h5>

                <div class="mt-3">
                    {{ form_row(form.metaTitle) }}
                </div>

                <div class="mr-3">
                    {{ form_row(form.metaDescription ) }}
                </div>
            </div>
        </div>

    </div>

    <div class="d-flex justify-content-end mt-2">
        <button class="btn btn-primary">Enregistrer</button>
    </div>
</div>

{{ form_end(form) }}